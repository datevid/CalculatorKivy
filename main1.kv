<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size:root.width, root.height

        TextInput:
            id:calc_input
            text:"0"
            halign:"right"
            font_size:65
            size_hint:(1,0.15)
        
        GridLayout:
            cols:4
            rows:5

            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"%"
            Button:
                id:clear
                size_hint:(0.2,.2)
                font_size:32
                text:"C"
                on_press:root.clear()
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:u"\u00AB"
                on_press:root.btnRemove()
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"/"
                on_press:root.btnSign("/")
            
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"7"
                background_color:(200/255,200/255,200/255,1)
                on_press:root.btnPressNum(7)
            
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"8"
                background_color:(200/255,200/255,200/255,1)
                on_press:root.btnPressNum(8)
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"9"
                background_color:(200/255,200/255,200/255,1)
                on_press:root.btnPressNum(9)
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"*"
                on_press:root.btnSign("*")
            
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"4"
                background_color:(200/255,200/255,200/255,1)
                on_press:root.btnPressNum(4)
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"5"
                background_color:(200/255,200/255,200/255,1)
                on_press:root.btnPressNum(5)
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"6"
                background_color:(200/255,200/255,200/255,1)
                on_press:root.btnPressNum(6)
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"-"
                on_press:root.btnSign("-")
            
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"1"
                background_color:(200/255,200/255,200/255,1)
                on_press:root.btnPressNum(1)
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"2"
                background_color:(200/255,200/255,200/255,1)
                on_press:root.btnPressNum(2)
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"3"
                background_color:(200/255,200/255,200/255,1)
                on_press:root.btnPressNum(3)
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"+"
                on_press:root.btnSign("+")
            
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"+/-"
                background_color:(200/255,200/255,200/255,1)
                on_press:root.btnPosNeg()
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"0"
                background_color:(200/255,200/255,200/255,1)
                on_press:root.btnPressNum(0)
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"."
                background_color:(200/255,200/255,200/255,1)
                on_press:root.btnDot()
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"="
                on_press:root.btnEquals()